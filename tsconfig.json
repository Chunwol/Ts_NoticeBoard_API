{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude" : [
    "node_modules"
  ],
  "include" : [
    "src/*.ts",
    "src/routes/*.ts",
    "src/routes/**/*.ts",
    "database/*.ts",
    "database/models/*.ts"
  ]
}
